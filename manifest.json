{
    "name": "Motivate Me",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "A Chrome extension to provide daily motivation and inspiration with offline support.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icons/logo.png"
        }
    },
    "icons": {
        "128": "icons/logo.png"
    },
    "permissions": ["storage", "alarms", "notifications"],
    "host_permissions": ["https://zenquotes.io/*"],
    "background": {
        "service_worker": "background.js"
    }
}